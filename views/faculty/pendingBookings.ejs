	<h1>Pending Bookings</h1>
	 <font size="+1">
	<div class="mydiv1" style="left: 250px;">
	   <font face="Poppins"> 
			
				<% for(let i=0; i<pendingBookings.length; i++) { %>
					
					<div class="mb-2">
						<span>Bookings:</span>
						<span><%= i+1 %></span>
					</div>
	
					<div class="mb-2">
							<span>Branch:</span>
							<span><%= pendingBookings[i].branch %></span>
					</div>
						
					<div class="mb-2">
							<span>Year:</span>
							<span><%= pendingBookings[i].year%></span>
					</div>
						
					<div class="mb-2">
							<span>Faculty In Charge:</span>
							<span><%= pendingBookings[i].charge %></span>
					</div>
						
					<div class="mb-2">
							<span>Time slot:</span>
							<span><%= pendingBookings[i].duration %></span>
					</div>
					
					<div class="mb-2">
							<span>Status:</span>
							
							<% if(pendingBookings[i].status == "pending") { %>
								<span class="text-pending">Your booking request hasn't been processed yet.</span>
							<% } else if(pendingBookings[i].status == "rejected") { %>
								<span class="text-rejected">Your booking request has been rejected due to shortage of staff. We are sorry for the inconvenience</span>
							<% } else if(pendingBookings[i].status == "accepted") { %>
								<span class="text-accepted">Your booking request has been accepted. Please wait while an staff is being assigned.</span>
							<% } else if(pendingBookings[i].status == "assigned") { %>
								<span class="text-assigned">Your booking request has been accepted and the staff <%= pendingTickets[i].staff.firstName + " " + pendingTickets[i].staff.lastName %></span><br>
							<% } %>
					</div>
					<br>	
						<% if(pendingBookings[i].status == "rejected") { %>
							
								<a class="btn" href="/faculty/bookings/deleteRejected/<%= pendingBookings[i]._id %>">Okay</a>
						
						<% } %>	
				<% } %>
				<br>	
	</div>
	</main>
	
