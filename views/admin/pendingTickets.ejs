<main>
<head>
     <meta name='viewport' content='width=device-width, initial-scale=1'>
     <script src="https://kit.fontawesome.com/2dc22d6664.js" crossorigin='anonymous'></script>
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
<link rel="stylesheet" href="../../assets/css/adminstyles.css">
</head>
<a href="/admin/dashboard"> 
	<i class='fas fa-arrow-alt-circle-left' style='font-size:24px;color:#707070;'></i>
	
</a>

<h1 style="color: black;">Pending Tickets</h1>
<table  width=100% height=100% bgcolor=#FFFFFF align="center" >
     <thead>
	<tr>
          <th scope="col">Sl No.</th>
          <th scope="col">Building No.</th>
          <th scope="col">Room No.</th>
          <th scope="col">Nature</th>
          <th scope="col">Problem</th>
          <th scope="col">Instructions</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
     </tr>
</thead>
<tbody>
     <% for(let i=0; i<pendingTickets.length; i++) { %>
          <tr>
               <th scope="row"> <%= i+1 %> </th>
               <td><%= pendingTickets[i].building%></td>
               <td><%= pendingTickets[i].room %></td>
               <td><%= pendingTickets[i].nature%></td>
               <td><%= pendingTickets[i].problem%></td>
               <td><%= pendingTickets[i].instruction%></td>
               <td class="fw-bold text-<%= pendingTickets[i].status %>"> <%= pendingTickets[i].status %> </td>
               <td><a href="/admin/ticket/view/<%= pendingTickets[i]._id %>" class="btn">View</a></td>
          </tr>
     <% } %>
</tbody>
</table>
</main>