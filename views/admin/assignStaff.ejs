 <font size="+1">
<div class="mydiv1">
   <font face="Poppins"> 

		
		
		<form action="/admin/ticket/assign/<%= ticket._id %>" method="POST" class="border m-4 my-3 p-4 bg-white rounded-2 shadow">
			
			<div class="row">
				<div class="mb-4 col-sm-4">
					<label for="faculty" class="form-label">Faculty name</label>
					<input type="text" class="form-control" id="faculty" value="<%= ticket.faculty.firstName + ' ' + ticket.faculty.lastName %>" disabled>
				</div>
				
				<div class="mb-4 col-sm-8">
					<label for="address" class="form-label">Building Number</label>
					<input type="text" class="form-control" id="building" value= "<%= ticket.building %>" disabled>
				</div>

				<div class="mb-4 col-sm-8">
					<label for="address" class="form-label">Room Number</label>
					<input type="text" class="form-control" id="room" value= "<%= ticket.room %>" disabled>
				</div>
			</div>
			
			<div class="mb-4">
				<label for="staff" class="form-label">Select Staff</label>
				<select name="staff" class="form-select" id="staff">
					<% for(let i=0; i<staffs.length; i++) { %>
						<option value="<%= staffs[i]._id %>"><%= staffs[i].firstName + " " + staffs[i].lastName %></option>
					<% } %>
				</select>
			</div>
			
			<div class="mb-4">
				<label for="msg" class="form-label">Message to Staff</label>
				<textarea type="text" name="adminToStaffMsg" class="form-control" id="msg" placeholder="Any extra instructions.."></textarea>
			</div>
			
			<button type="submit" class="btn w-75 d-block m-auto mt-4">Assign</button>
		</form>
		
	</div>
