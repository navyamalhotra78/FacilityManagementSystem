<h1>Staff</h1>
<div class="mydiv2">
<table  width=100% height=100% bgcolor=#FFFFFF align="center" >
	       <thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Staff name</th>
						<th scope="col">Email</th>
						<th scope="col">Phone</th>
						<th scope="col">Joined time</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i<staff.length; i++) { %>
						<tr>
							<th scope="row"> <%= i+1 %> </th>
							<td> <%= staff[i].firstName + " " + staff[i].lastName %> </td>
							<td> <%= staff[i].email %> </td>
							<td> <%= staff[i].phone %> </td>
							<td> <%= staff[i].joinedTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
