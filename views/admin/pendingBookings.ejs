<main>
    <head>
         <meta name='viewport' content='width=device-width, initial-scale=1'>
         <script src="https://kit.fontawesome.com/2dc22d6664.js" crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../assets/css/adminstyles.css">
    </head>
    <a href="/admin/dashboard"> 
        <i class='fas fa-arrow-alt-circle-left' style='font-size:24px;color:#707070;'></i>
        
    </a>
    
    <h1>Pending Bookings</h1>
    <table  width=100% height=100% bgcolor=#FFFFFF align="center" >
         <thead>
        <tr>
               <th scope="col">Sl No.</th>
              <th scope="col">Branch</th>
              <th scope="col">Year</th>
              <th scope="col">Faculty in Charge</th>
              <th scope="col">Purpose</th>
              <th scope="col">Auditorium</th>
              <th scope="col">Duration</th>
              <th scope="col">Status</th>
         </tr>
    </thead>
    <tbody>
         <% for(let i=0; i<pendingBookings.length; i++) { %>
              <tr>
                   <th scope="row"> <%= i+1 %> </th>
                   <td><%= pendingBookings[i].branch%></td>
                   <td><%= pendingBookings[i].year%></td>
                   <td><%= pendingBookings[i].charge%></td>
                   <td><%= pendingBookings[i].purpose%></td>
                   <td><%= pendingBookings[i].audi%></td>
                   <td><%= pendingBookings[i].duration%></td>
                   <td class="fw-bold text-<%= pendingBookings[i].status %>"> <%= pendingBookings[i].status %> </td>
                   <td><a href="/admin/bookings/view/<%= pendingBookings[i]._id %>" class="btn">View</a></td>
              </tr>
         <% } %>
    </tbody>
    </table>
    </main>