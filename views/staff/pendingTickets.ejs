<script src="https://kit.fontawesome.com/2dc22d6664.js" crossorigin='anonymous'></script>
<link rel="stylesheet" href="../../assets/css/staffstyles.css">
<a href="/staff/dashboard"> 
		<i class='fas fa-arrow-alt-circle-left' style='font-size:24px;color:#707070;'></i>
</a>
		<h1>Pending Tickets</h1>
		<div class="mydiv2">
			<table  width=100% height=100% bgcolor=#FFFFFF align="center" >
				<thead>
					<tr>
						<th scope="col">Sl No.</th>
						<th scope="col">Building No.</th>
						<th scope="col">Room No.</th>
						<th scope="col">Nature</th>
						<th scope="col">Problem</th>
						<th scope="col">Image</th>
						<th scope="col">Instructions</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i<pendingTickets.length; i++) { %>
						<tr>
							<th scope="row"> <%= i+1 %> </th>
							<td> <%= pendingTickets[i].building %> </td>
							<td> <%= pendingTickets[i].room %> </td>
							<td> <%= pendingTickets[i].problem %> </td>
							<td> <%= pendingTickets[i].nature %> </td>
							<td><img src="/staff/tickets/image/<%= pendingTickets[i]._id %>" alt="Ticket Image" style="max-width: 100px; max-height: 100px;">
								<a href="/staff/tickets/image/<%= pendingTickets[i]._id %>" download="<%= pendingTickets[i].imageName %>">Download Image</a>
								<td> <%= pendingTickets[i].instruction %> </td>
								
							<td>
								<a href="/staff/ticket/view/<%= pendingTickets[i]._id %>" class="btn">View</a>
								<a href="/staff/ticket/complete/<%= pendingTickets[i]._id %>" class="btn">/Complete</a>
							</td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
		

